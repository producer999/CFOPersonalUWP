<Page
    x:Class="CFOTest.FinancialMonthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CFOTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:calc="using:Syncfusion.UI.Xaml.Controls.Input"
    xmlns:calendar="using:Telerik.UI.Xaml.Controls.Input"
    mc:Ignorable="d"
    
    NavigationCacheMode="Required">

    <Page.Resources>
        <local:CustomCellStateSelector x:Key="CustomCellStateSelector"/>

        <Storyboard x:Name="BudgetCategoryAddedStoryboard">
            <DoubleAnimation
              Storyboard.TargetName="BudgetCategoryAddedText"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.0" Duration="0:0:3.5"/>
        </Storyboard>

        <Storyboard x:Name="IncomeCategoryAddedStoryboard">
            <DoubleAnimation
              Storyboard.TargetName="IncomeCategoryAddedText"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.0" Duration="0:0:3.5"/>
        </Storyboard>

        <Storyboard x:Name="ExpenseCategoryAddedStoryboard">
            <DoubleAnimation
              Storyboard.TargetName="ExpenseCategoryAddedText"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.0" Duration="0:0:3.5"/>
        </Storyboard>

        <Storyboard x:Name="ReceiptCategoryAddedStoryboard">
            <DoubleAnimation
              Storyboard.TargetName="ReceiptCategoryAddedText"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.0" Duration="0:0:3.5"/>
        </Storyboard>

    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP CONTROL STRIP -->

        <RelativePanel Grid.Row="0">

            <TextBlock x:Name="MonthViewTitle" Text="Month View" Foreground="White" FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="20"
                               Margin="10,13,10,0" RelativePanel.AlignLeftWithPanel="True" VerticalAlignment="Center"/>
            <!--<TextBlock x:Name="TrialVersionLabel"  Text="Trial Version -" Foreground="Red" FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="18"
                       RelativePanel.RightOf="MonthViewTitle" Margin="10,15,0,0" FontWeight="Bold"
                       Visibility="{x:Bind appSettings.IsLicenseTrial, Mode=OneWay}"/>
            <TextBlock x:Name="TrialVersionExpiration"  Text="{x:Bind appSettings.TrialExpirationDate, Mode=OneWay, Converter={StaticResource DateOffsetTrialDaysFormatConverter}}" 
                       Foreground="Red" FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="18"
                       RelativePanel.RightOf="TrialVersionLabel" Margin="2,15,10,0" FontWeight="Bold"
                       Visibility="{x:Bind appSettings.IsLicenseTrial, Mode=OneWay}"/>-->
            <TextBlock Text="Choose date:" Foreground="White" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                               Margin="10,17,10,0" RelativePanel.LeftOf="DatePicker" VerticalAlignment="Bottom"/>
            <CalendarDatePicker x:Name="DatePicker" Margin="5,10,10,10" Foreground="White" DisplayMode="Year"
                                        DateChanged="CalendarPicker_DateChanged"
                                        RelativePanel.LeftOf="TodayButton"
                                CalendarViewStyle="{StaticResource CustomCalendarView}"/>
            <Border x:Name="TodayButton" BorderBrush="White" BorderThickness="1"
                            RelativePanel.AlignRightWithPanel="True"  Margin="5,10,13,10">
                <Button Style="{StaticResource NoClickBackgroundButtonTemplate}"
                                FontFamily="Assets/Roboto-Thin.ttf#Roboto" Foreground="White"
                            BorderThickness="0" Content="Today" Height="30" Background="Transparent"
                                Click="TodayButton_Click"/>
            </Border>
        </RelativePanel>

        <!-- MAIN SECTION -->

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- MONTH DISPLAY AND GRAND TOTAL DISPLAY -->

            <RelativePanel Grid.Row="0" MinWidth="1020">

                <Border x:Name="MonthDisplay" BorderThickness="3" Grid.Row="0" Margin="10,0,10,0" BorderBrush="White" CornerRadius="5" HorizontalAlignment="Left"
                                RelativePanel.AlignLeftWithPanel="True" Background="Transparent"
                                PointerEntered="MonthOverlay_PointerEntered"
                                PointerExited="MonthOverlay_PointerExited">
                    <RelativePanel HorizontalAlignment="Stretch">

                        <TextBlock Text="{x:Bind CurrentMonth.CurrentDate, Mode=OneWay, Converter={StaticResource MonthYearFormatConverter}}" 
                                           Margin="20,15,20,20" Foreground="White" FontSize="60" FontWeight="Bold"/>
                        <Button x:Name="PreviousMonthButton" Height="50" Width="25" RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignVerticalCenterWithPanel="True" Opacity="0"
                                               Background="DarkGray" FontFamily="Segoe MDL2 Assets" Content="&#xE938;"
                                                Foreground="White" Padding="0" Margin="-13,0,0,0"
                                        HorizontalContentAlignment="Left"
                                        Click="ChangeMonthButton_Click"/>
                        <Button x:Name="NextMonthButton" Height="50" Width="25"  RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.AlignVerticalCenterWithPanel="True" VerticalContentAlignment="Center"
                                               Background="DarkGray" FontFamily="Segoe MDL2 Assets" Content="&#xE937;"
                                                Foreground="White" Padding="0" Margin="0,0,-13,0" Opacity="0"
                                        HorizontalContentAlignment="Right"
                                        Click="ChangeMonthButton_Click"/>
                    </RelativePanel>
                </Border>

                <Border BorderThickness="3" Grid.Row="0" Margin="10,0,10,0" BorderBrush="#2bd82e" CornerRadius="5" HorizontalAlignment="Left"
                                RelativePanel.AlignRightWithPanel="True"
                        RightTapped="CopyTotalToNextMonth_RightTapped">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="GrandTotalText" Text="{x:Bind CurrentMonth.GrandTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Margin="20,-2,20,0" Foreground="White" FontSize="60" FontWeight="Bold"></TextBlock>
                        <TextBlock Text="remaining this month" Margin="10,0,10,10" Foreground="White" FontSize="20" TextAlignment="Center"></TextBlock>
                    </StackPanel>

                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <Button Content="Rollover to Next Month as Income" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                    Click="{x:Bind CurrentMonth.CopyTotalToNextMonth}"
                                    IsEnabled="{x:Bind CurrentMonth.GrandTotal, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}">
                            </Button>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </Border>

            </RelativePanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="510"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Hidden" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical">

                        <!-- INCOME SECTION -->

                        <RelativePanel HorizontalAlignment="Left" Width="494">
                            <toolkit:DropShadowPanel x:Name="IncomeHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13" 
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="Income" Margin="10,10,0,0" FontSize="23" FontFamily="Assets/Roboto-Bold.ttf#Roboto" 
                                           Foreground="#f6ff70" TextAlignment="Left" VerticalAlignment="Bottom"/>
                            </toolkit:DropShadowPanel>
                            <Button x:Name="IncomeAddButton" FontFamily="Segoe MDL2 Assets" Content="&#xE710;" FontSize="12" Margin="0,6,0,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="IncomeHeaderText" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemAddButton_Click" MinWidth="5"/>
                            <Button x:Name="IncomeSortButton" FontFamily="Segoe MDL2 Assets" Content="&#xE8C4;" FontSize="15" Margin="-14,6,10,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="IncomeAddButton" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                            Style="{StaticResource NoClickBackgroundButtonTemplate}">
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Sort by:" FontFamily="Assets/Roboto-Normal.ttf#Roboto" Foreground="White"
                                                       Margin="0,0,0,4"/>
                                            <ListBox x:Name="IncomeSortOptionsList"  SelectionChanged="SortMenu_SelectionChanged"
                                                    ItemsSource="{x:Bind CurrentMonth.GetIncomeSortOptions()}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="local:IncomeSortOptions">
                                                        <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}"
                                                                   FontFamily="Assets/Roboto-Thin.ttf#Roboto" Foreground="White"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                            <TextBlock x:Name="IncomeCategoryAddedText" RelativePanel.RightOf="IncomeSortButton" Text="New Category Added!"
                                       FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="15" Opacity="0"
                                       VerticalAlignment="Bottom" Margin="0,17,10,10"
                                       Foreground="White"></TextBlock>

                            <toolkit:DropShadowPanel x:Name="IncomeTotalText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                             Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"
                                                                 RelativePanel.LeftOf="IncomeExpandButton">
                                <TextBlock x:Name="IncomeTotal"  Margin="10,10,6,0" Text="{x:Bind CurrentMonth.IncomeTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Foreground="White"
                                                        FontFamily="Assets/Roboto-Bold.ttf#Roboto" FontSize="21"/>
                            </toolkit:DropShadowPanel>

                            <Button x:Name="IncomeExpandButton" FontFamily="Segoe MDL2 Assets" Content="&#xE96E;" FontSize="9" Margin="-1,0,-1,0" Width="30" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ExpandButton_Click"/>
                        </RelativePanel>

                        <ListView x:Name="IncomeListView" Background="Transparent" Margin="15,10,10,20" Width="465" 
                                  ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                            ItemsSource="{x:Bind CurrentMonth.IncomeList, Mode=OneWay}" HorizontalAlignment="Left" 
                                        CanReorderItems="True" AllowDrop="True"
                                        SelectionChanged="ListView_SelectionChanged" MaxHeight="440">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Income">
                                    <Border BorderBrush="#2bd82e" BorderThickness="0,0,0,1" Margin="-10,0,-10,0" Background="Transparent"
                                                    PointerEntered="ListViewItem_PointerEntered" PointerExited="ListViewItem_PointerExited"
                                            RightTapped="ListViewItem_RightTapped">
                                        <RelativePanel Height="40" Width="465">

                                            <TextBox Text="{x:Bind Label, Mode=TwoWay}" x:Name="LabelBlock" Margin="0,2,0,0" 
                                                             Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}" 
                                                             FontSize="18" TextAlignment="Left" VerticalAlignment="Bottom"
                                                                 RelativePanel.AlignLeftWithPanel="True" FontFamily="Assets/Roboto-Bold.ttf#Roboto" IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" BorderBrush="White" BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                                 Style="{StaticResource TransparentTextBox}" IsSpellCheckEnabled="False" Padding="0,7,0,0" MinWidth="10" MaxLength="20"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"
                                                            KeyUp="ListItemTextBox_KeyUp"/>

                                            <AutoSuggestBox x:Name="IncomeTypeChooser" RelativePanel.RightOf="LabelBlock" Margin="15,2,0,0" Padding="0,0,0,0" 
                                                                    Style="{StaticResource TypeSuggestionBoxTemplate}"
                                                                    Text="{x:Bind Type.Label, Mode=OneWay}"
                                                                    TextMemberPath="Label" ToolTipService.ToolTip="Category"
                                                                    VerticalAlignment="Bottom" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay}"
                                                                    TextChanged="AutoSuggestBox_TextChanged"
                                                                    KeyUp="AutosuggestBox_KeyUp"
                                                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                                                    LostFocus="AutoSuggestBox_LostFocus">
                                                <AutoSuggestBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Label}" Foreground="White" FontSize="12"
                                                                           Margin="4" Padding="0" VerticalAlignment="Bottom" Width="110"
                                                                           TextAlignment="Left" HorizontalAlignment="Left"/>
                                                    </DataTemplate>
                                                </AutoSuggestBox.ItemTemplate>
                                            </AutoSuggestBox>

                                            <Button x:Name="EditButton" FontFamily="Segoe MDL2 Assets" Content="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditButtonGlyphConverter}}" FontSize="12" Margin="5,0,0,0" Padding="0" Width="30" Height="40" Foreground="Transparent" IsEnabled="True"
                                                                RelativePanel.RightOf="IncomeTypeChooser" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                                Click="ListItemEditButton_Click"/>

                                            <TextBox x:Name="CurrencyTextbox" Text="{x:Bind Amount, Mode=TwoWay, Converter={StaticResource CurrencyFormatConverter}}" Margin="0,2,-2,0" FontSize="17" Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}" TextAlignment="Right" VerticalAlignment="Bottom"
                                                               RelativePanel.LeftOf="ListItemDeleteButton" FontFamily="Assets/Roboto-Regular.ttf#Roboto" IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" MinWidth="10" MaxLength="13"
                                                                 Style="{StaticResource TransparentTextBox}" IsSpellCheckEnabled="False" Padding="0,7,0,0" BorderBrush="White" BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                                 toolkit:TextBoxRegex.Regex="^(\$*[1-9]\d{0,2}?((?:,\d{3})*|(?:\d{3})*)|\$*0)(?:\.\d{2})$"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"
                                                            KeyUp="ListItemCurrencyBox_KeyUp"/>

                                            <Button x:Name="ListItemDeleteButton" FontFamily="Segoe MDL2 Assets" Content="&#xE711;" FontSize="9" Margin="-1,0,1,0" Width="30" Height="40" Foreground="Transparent" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                                               RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemDeleteButton_Click"/>
                                        </RelativePanel>

                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout>
                                                <StackPanel Orientation="Vertical">
                                                    <Button Click="CopyToThisMonth_Click" Content="Duplicate" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch">
                                                    </Button>
                                                    <Button Click="CopyToNextMonth_Click" Content="Copy to Next Month" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch" Margin="0,10,0,0">
                                                    </Button>
                                                </StackPanel>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- EXPENSES SECTION -->

                        <RelativePanel HorizontalAlignment="Left" Width="494">
                            <toolkit:DropShadowPanel x:Name="ExpenseHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="Expenses" Margin="10,10,0,0" FontSize="23" FontFamily="Assets/Roboto-Bold.ttf#Roboto" Foreground="#f6ff70" TextAlignment="Left" VerticalAlignment="Bottom"/>
                            </toolkit:DropShadowPanel>
                            <Button x:Name="ExpenseAddButton" FontFamily="Segoe MDL2 Assets" Content="&#xE710;" FontSize="12" Margin="0,6,0,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="ExpenseHeaderText" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemAddButton_Click"/>

                            <Button x:Name="ExpenseSortButton" FontFamily="Segoe MDL2 Assets" Content="&#xE8C4;" FontSize="15" Margin="-14,6,10,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="ExpenseAddButton" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                            Style="{StaticResource NoClickBackgroundButtonTemplate}">
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Sort by:" FontFamily="Assets/Roboto-Normal.ttf#Roboto" Foreground="White"
                                                       Margin="0,0,0,4"/>
                                            <ListBox x:Name="ExpenseSortOptionsList"  SelectionChanged="SortMenu_SelectionChanged"
                                                     ItemsSource="{x:Bind CurrentMonth.GetExpenseSortOptions()}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="local:ExpenseSortOptions">
                                                        <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}"
                                                                   FontFamily="Assets/Roboto-Thin.ttf#Roboto" Foreground="White"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                            <TextBlock x:Name="ExpenseCategoryAddedText" RelativePanel.RightOf="ExpenseSortButton" Text="New Category Added!"
                                       FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="15" Opacity="0"
                                       VerticalAlignment="Bottom" Margin="0,17,10,10"
                                       Foreground="White"></TextBlock>

                            <toolkit:DropShadowPanel x:Name="ExpenseTotalText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                             Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"
                                                                 RelativePanel.LeftOf="ExpenseExpandButton">
                                <TextBlock x:Name="ExpenseTotal"  Margin="10,10,6,0" Text="{x:Bind CurrentMonth.ExpenseTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Foreground="White"
                                                        FontFamily="Assets/Roboto-Bold.ttf#Roboto" FontSize="21"/>
                            </toolkit:DropShadowPanel>

                            <Button x:Name="ExpenseExpandButton" FontFamily="Segoe MDL2 Assets" Content="&#xE96E;" FontSize="9" Margin="-1,0,-1,0" Width="30" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ExpandButton_Click"/>
                        </RelativePanel>

                        <ListView x:Name="ExpenseListView" Background="Transparent" Margin="15,10,-15,20" Width="495" 
                                  ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ItemsSource="{x:Bind CurrentMonth.ExpenseList, Mode=OneWay}" 
                                  SelectedItem="{x:Bind CurrentMonth.CurrentExpense, Mode=TwoWay}"
                                  HorizontalAlignment="Left" CanReorderItems="True" AllowDrop="True"
                                  SelectionChanged="ListView_SelectionChanged" MaxHeight="440">

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Expense">

                                    <RelativePanel Width="495" Padding="0" Margin="-10,0,-15,0">
                                        <Border BorderBrush="#ff0000" BorderThickness="0,0,0,1" Margin="0,0,0,0" Background="{x:Bind IsPaid, Mode=OneWay, Converter={StaticResource BoolToCompletedBackgroundColorConverter}}" 
                                                    PointerEntered="ListViewItem_PointerEntered" PointerExited="ListViewItem_PointerExited"
                                                RightTapped="ListViewItem_RightTapped"
                                               RelativePanel.AlignLeftWithPanel="True">
                                            <RelativePanel Height="40" Width="461">

                                                <TextBox Text="{x:Bind Label, Mode=TwoWay}" x:Name="ExpenseDescriptionText" Margin="0,2,0,0" Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}" FontSize="18" TextAlignment="Left" VerticalAlignment="Bottom"
                                                               RelativePanel.AlignLeftWithPanel="True" FontFamily="Assets/Roboto-Bold.ttf#Roboto" IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" BorderBrush="White" BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                                 Style="{StaticResource TransparentTextBox}" IsSpellCheckEnabled="False" Padding="0,7,0,0" MinWidth="10" MaxLength="14"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"
                                                            KeyUp="ListItemTextBox_KeyUp"/>

                                                <AutoSuggestBox x:Name="PayeeTypeChooser" RelativePanel.RightOf="ExpenseDescriptionText" Margin="15,2,0,0" Padding="0,0,0,0" 
                                                                    Style="{StaticResource PayeeSuggestionBoxTemplate}"
                                                                    Text="{x:Bind Payee.Label, Mode=OneWay}"
                                                                    TextMemberPath="Label" ToolTipService.ToolTip="Payee"
                                                                    VerticalAlignment="Bottom" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay}"
                                                                    TextChanged="AutoSuggestBox_TextChanged"
                                                                    KeyUp="AutosuggestBox_KeyUp"
                                                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                                                    LostFocus="AutoSuggestBox_LostFocus">
                                                    <AutoSuggestBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Label}" Foreground="White" FontSize="12"
                                                                           Margin="4" Padding="0" VerticalAlignment="Bottom" Width="110"
                                                                           TextAlignment="Left" HorizontalAlignment="Left"/>
                                                        </DataTemplate>
                                                    </AutoSuggestBox.ItemTemplate>
                                                </AutoSuggestBox>

                                                <AutoSuggestBox x:Name="ExpenseTypeChooser" RelativePanel.RightOf="PayeeTypeChooser" Margin="15,2,0,0" Padding="0,0,0,0" 
                                                                    Style="{StaticResource TypeSuggestionBoxTemplate}"
                                                                    Text="{x:Bind Type.Label, Mode=OneWay}"
                                                                    TextMemberPath="Label" ToolTipService.ToolTip="Category"
                                                                    VerticalAlignment="Bottom" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay}"
                                                                    TextChanged="AutoSuggestBox_TextChanged"
                                                                    KeyUp="AutosuggestBox_KeyUp"
                                                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                                                    LostFocus="AutoSuggestBox_LostFocus">
                                                    <AutoSuggestBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Label}" Foreground="White" FontSize="12"
                                                                           Margin="4" Padding="0" VerticalAlignment="Bottom" Width="110"
                                                                           TextAlignment="Left" HorizontalAlignment="Left"/>
                                                        </DataTemplate>
                                                    </AutoSuggestBox.ItemTemplate>
                                                </AutoSuggestBox>

                                                <Button x:Name="EditButton" FontFamily="Segoe MDL2 Assets" Content="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditButtonGlyphConverter}}" FontSize="12" Margin="5,0,0,0" Width="30" Height="40" Foreground="Transparent" 
                                                                RelativePanel.RightOf="ExpenseTypeChooser" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent" Padding="0"
                                                                Click="ListItemEditButton_Click"
                                                                IsEnabled="{x:Bind IsPaid, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                                                <Button x:Name="CompletedButton" FontFamily="Segoe MDL2 Assets" Content="&#xE8FB;" FontSize="12" Margin="-5,0,0,0" Padding="0" 
                                                    Width="30" Height="40" Foreground="{x:Bind IsPaid, Mode=OneWay, Converter={StaticResource BoolToCompleteButtonForegroundConverter}}" IsEnabled="True"
                                                               RelativePanel.RightOf="EditButton" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                                Click="ListItemCompleteButton_Click"
                                                            Visibility="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                            ToolTipService.ToolTip="Mark as Paid"/>

                                                <TextBox x:Name="CurrencyTextbox" Text="{x:Bind Amount, Mode=TwoWay, Converter={StaticResource CurrencyFormatConverter}}" Margin="0,2,-2,0" FontSize="17" Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}" TextAlignment="Right" VerticalAlignment="Bottom"
                                                               RelativePanel.LeftOf="ListItemDeleteButton" FontFamily="Assets/Roboto-Regular.ttf#Roboto" IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" BorderBrush="White" BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                                   Style="{StaticResource TransparentTextBox}" IsSpellCheckEnabled="False" Padding="0,7,0,0" MinWidth="10" MaxLength="11"
                                                                 toolkit:TextBoxRegex.Regex="^(\$*[1-9]\d{0,2}?((?:,\d{3})*|(?:\d{3})*)|\$*0)(?:\.\d{2})$"
                                                            KeyUp="ListItemCurrencyBox_KeyUp"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"/>

                                                <Button x:Name="ListItemDeleteButton" FontFamily="Segoe MDL2 Assets" Content="&#xE711;" FontSize="9" Margin="-1,0,-3,0" Width="30" Height="40" Foreground="Transparent" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                                               RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemDeleteButton_Click"/>


                                            </RelativePanel>

                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout>
                                                    <StackPanel Orientation="Vertical">
                                                        <Button Click="CopyToThisMonth_Click" Content="Duplicate" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch">
                                                        </Button>
                                                        <Button Click="CopyToNextMonth_Click" Content="Copy to Next Month" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch" Margin="0,10,0,0">
                                                        </Button>
                                                    </StackPanel>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Border>
                                        <StackPanel x:Name="ExpenseDueDateSelector" Orientation="Vertical" RelativePanel.AlignRightWithPanel="True" Margin="2,5,2,0"
                                                    IsHitTestVisible="True" Tapped="ExpenseDueDateSelector_Tapped">
                                            <TextBlock Text="DUE" Foreground="#f6ff70" FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                               FontSize="11" TextAlignment="Center"/>
                                            <TextBlock Text="{x:Bind DueDate, Mode=OneWay, Converter={StaticResource ShortDateFormatConverter}}" Foreground="#f6ff70" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                                               FontSize="11" TextAlignment="Center"/>

                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout x:Name="DueDateFlyout">
                                                    <calendar:RadCalendar x:Name="DueDateCalendar" Width="250" Height="250" SelectionMode="Single"
                                                  IsTodayHighlighted="False" Margin="5"
                                                  NavigationArrowsVisibility="Visible"
                                                  GridLinesThickness="1" GridLinesBrush="White"
                                                  BorderBrush="White" BorderThickness="1"
                                                  FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                 
                                                  DisplayDateStart="{x:Bind Date, Mode=OneWay}"
                                                  
                                                  MonthViewHeaderFormat=" {0:MMM yyyy}"
                                                                          
                                                  NormalCellStyle="{StaticResource StandardCellStyle}"
                                                  AnotherViewCellStyle="{StaticResource OutOfCurrentMonthCellStyle}"
                                                  BlackoutCellStyle="{StaticResource OutOfCurrentMonthCellStyle}"
                                                  HighlightedCellStyle="{StaticResource HighlightCellStyle}"
                                                  CellStateSelector="{StaticResource CustomCellStateSelector}"
                                                  SelectionChanged="DueDateCalendar_SelectionChanged">

                                                        <calendar:RadCalendar.Commands>
                                                            <!--<local:CustomMoveToPreviousViewCommand/>
                                                            <local:CustomMoveToNextViewCommand/>-->
                                                            <local:CustomMoveToUpperViewCommand/>
                                                            <local:CustomMoveToLowerViewCommand/>
                                                        </calendar:RadCalendar.Commands>
                                                    </calendar:RadCalendar>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </StackPanel>
                                    </RelativePanel>
                                    
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                        <!-- BUDGETS SECTION -->

                        <RelativePanel HorizontalAlignment="Left" Width="494">
                            <toolkit:DropShadowPanel x:Name="BudgetHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="Budgets" Margin="10,10,0,0" FontSize="23" FontFamily="Assets/Roboto-Bold.ttf#Roboto" Foreground="#f6ff70" TextAlignment="Left" VerticalAlignment="Bottom"/>
                            </toolkit:DropShadowPanel>
                            <Button x:Name="BudgetAddButton" FontFamily="Segoe MDL2 Assets" Content="&#xE710;" FontSize="12" Margin="0,5,0,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="BudgetHeaderText" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemAddButton_Click"/>

                            <Button x:Name="BudgetSortButton" FontFamily="Segoe MDL2 Assets" Content="&#xE8C4;" FontSize="15" Margin="-14,6,10,0" Width="40" Height="40" Foreground="White" IsEnabled="True"
                                                               RelativePanel.RightOf="BudgetAddButton" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                            Style="{StaticResource NoClickBackgroundButtonTemplate}">
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Sort by:" FontFamily="Assets/Roboto-Normal.ttf#Roboto" Foreground="White"
                                                       Margin="0,0,0,4"/>
                                            <ListBox x:Name="BudgetSortOptionsList"  SelectionChanged="SortMenu_SelectionChanged"
                                                     ItemsSource="{x:Bind CurrentMonth.GetBudgetSortOptions()}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="local:BudgetSortOptions">
                                                        <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}"
                                                                   FontFamily="Assets/Roboto-Thin.ttf#Roboto" Foreground="White"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                            <TextBlock x:Name="BudgetCategoryAddedText" RelativePanel.RightOf="BudgetSortButton" Text="New Category Added!"
                                       FontFamily="Assets/Roboto-Thin.ttf#Roboto" FontSize="15" Opacity="0"
                                       VerticalAlignment="Bottom" Margin="0,17,10,10"
                                       Foreground="White"></TextBlock>

                            <toolkit:DropShadowPanel x:Name="BudgetRemainingText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                                 Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"
                                                                     RelativePanel.LeftOf="BudgetDividerText">
                                <TextBlock x:Name="BudgetRemaining"  Margin="10,10,6,0" Text="{x:Bind CurrentMonth.BudgetRemainingTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Foreground="LightGray"
                                                            FontFamily="Assets/Roboto-Regular.ttf#Roboto" FontSize="21"/>
                            </toolkit:DropShadowPanel>

                            <toolkit:DropShadowPanel x:Name="BudgetDividerText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="2" OffsetY="13"
                                                                 Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"
                                                                     RelativePanel.LeftOf="BudgetTotalText">
                                <TextBlock x:Name="BudgetDivider"  Margin="0,10,-8,0" Text="/" Foreground="White"
                                                            FontFamily="Assets/Roboto-Bold.ttf#Roboto" FontSize="21"/>
                            </toolkit:DropShadowPanel>

                            <toolkit:DropShadowPanel x:Name="BudgetTotalText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="13" OffsetY="13"
                                                                 Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"
                                                                     RelativePanel.LeftOf="BudgetExpandButton">
                                <TextBlock x:Name="BudgetTotal"  Margin="10,10,6,0" Text="{x:Bind CurrentMonth.BudgetTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Foreground="White"
                                                            FontFamily="Assets/Roboto-Bold.ttf#Roboto" FontSize="21"/>
                            </toolkit:DropShadowPanel>


                            <Button x:Name="BudgetExpandButton" FontFamily="Segoe MDL2 Assets" Content="&#xE96E;" FontSize="9" Margin="-1,0,-1,0" Width="30" Height="40" Foreground="White" IsEnabled="True"
                                                                       RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                                       Click="ExpandButton_Click"/>
                        </RelativePanel>

                        <ListView x:Name="BudgetListView" Background="Transparent" Margin="15,10,10,20" Width="465" 
                                  ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ItemsSource="{x:Bind CurrentMonth.BudgetList, Mode=OneWay}" 
                                  HorizontalAlignment="Left" CanReorderItems="True" AllowDrop="True"
                                          SelectedItem="{x:Bind CurrentMonth.CurrentBudget, Mode=TwoWay}"
                                              ItemClick="BudgetListView_ItemClick" IsItemClickEnabled="True"
                                                MaxHeight="440">

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Budget">
                                    <Border BorderBrush="Orange" BorderThickness="0,0,0,1" Margin="-10,0,-10,0" Background="{x:Bind IsClosed, Mode=OneWay, Converter={StaticResource BoolToCompletedBackgroundColorConverter}}" 
                                                    PointerEntered="ListViewItem_PointerEntered" PointerExited="ListViewItem_PointerExited"
                                                    RightTapped="ListViewItem_RightTapped">
                                        <RelativePanel Height="40" Width="465">
                                            <TextBox x:Name="BudgetDescriptionText" Margin="0,2,0,0" Padding="0,7,0,0" MinWidth="10" MaxLength="16" FontSize="18" 
                                                             FontFamily="Assets/Roboto-Bold.ttf#Roboto"  TextAlignment="Left" VerticalAlignment="Bottom" BorderBrush="White" IsSpellCheckEnabled="False" 
                                                             Style="{StaticResource TransparentTextBox}"
                                                             Text="{x:Bind Label, Mode=TwoWay}"
                                                             Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"
                                                             BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                             IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                                             RelativePanel.AlignLeftWithPanel="True" KeyUp="ListItemTextBox_KeyUp"/>

                                            <AutoSuggestBox x:Name="BudgetTypeChooser" RelativePanel.RightOf="BudgetDescriptionText" Margin="15,2,0,0" Padding="0,0,0,0" 
                                                                    Style="{StaticResource TypeSuggestionBoxTemplate}"
                                                                    Text="{x:Bind Type.Label, Mode=OneWay}"
                                                                    TextMemberPath="Label" ToolTipService.ToolTip="Category"
                                                                    VerticalAlignment="Bottom" IsEnabled="{x:Bind IsInEditMode, Mode=OneWay}"
                                                                    TextChanged="AutoSuggestBox_TextChanged"
                                                                    KeyUp="AutosuggestBox_KeyUp"
                                                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                                                    LostFocus="AutoSuggestBox_LostFocus">
                                                <AutoSuggestBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Label}" Foreground="White" FontSize="12"
                                                                           Margin="4" Padding="0" VerticalAlignment="Bottom" Width="110"
                                                                           TextAlignment="Left" HorizontalAlignment="Left"/>
                                                    </DataTemplate>
                                                </AutoSuggestBox.ItemTemplate>
                                            </AutoSuggestBox>

                                            <Button x:Name="EditButton" FontFamily="Segoe MDL2 Assets" Content="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditButtonGlyphConverter}}" FontSize="12" Margin="5,0,0,0" Padding="0" Width="30" Height="40" Foreground="Transparent"
                                                               RelativePanel.RightOf="BudgetTypeChooser" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                                Click="ListItemEditButton_Click"
                                                                IsEnabled="{x:Bind IsClosed, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                                            <Button x:Name="CompletedButton" FontFamily="Segoe MDL2 Assets" Content="&#xE8FB;" FontSize="12" Margin="-5,0,0,0" Padding="0" Width="30" Height="40" Foreground="{x:Bind IsClosed, Mode=OneWay, Converter={StaticResource BoolToCompleteButtonForegroundConverter}}" IsEnabled="True"
                                                               RelativePanel.RightOf="EditButton" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                                Click="ListItemCompleteButton_Click"
                                                                Visibility="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                            ToolTipService.ToolTip="Mark as Closed"/>

                                            <TextBlock x:Name="BudgetRemainingAmountText" Text="{x:Bind RemainingAmount, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}" Margin="0,13,2,9" FontSize="17" Foreground="LightGray" TextAlignment="Right" VerticalAlignment="Bottom"
                                                               RelativePanel.LeftOf="FormatText" FontFamily="Assets/Roboto-Light.ttf#Roboto"/>

                                            <TextBlock x:Name="FormatText" Text="/" Margin="2,10,2,0" FontSize="17" Foreground="White" TextAlignment="Right" VerticalAlignment="Bottom"
                                                               RelativePanel.LeftOf="CurrencyTextbox" FontFamily="Assets/Roboto-Regular.ttf#Roboto"/>

                                            <TextBox x:Name="CurrencyTextbox" Text="{x:Bind Amount, Mode=TwoWay, Converter={StaticResource CurrencyFormatConverter}}" 
                                                             Margin="0,2,-2,0" FontSize="17" Foreground="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeTextForegroundConverter}}" 
                                                             TextAlignment="Right" VerticalAlignment="Bottom"
                                                               RelativePanel.LeftOf="ListItemDeleteButton" FontFamily="Assets/Roboto-Regular.ttf#Roboto"  
                                                             BorderBrush="White" BorderThickness="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBorderConverter}}"
                                                                 Style="{StaticResource TransparentTextBox}" IsSpellCheckEnabled="False" Padding="0,9,0,0" MinWidth="10" MaxLength="11"
                                                                 toolkit:TextBoxRegex.Regex="^(\$*[1-9]\d{0,2}?((?:,\d{3})*|(?:\d{3})*)|\$*0)(?:\.\d{2})$"
                                                             KeyUp="ListItemCurrencyBox_KeyUp"
                                                             IsReadOnly="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                                             Background="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource BoolToEditModeBackgroundConverter}}"/>

                                            <Button x:Name="ListItemDeleteButton" FontFamily="Segoe MDL2 Assets" Content="&#xE711;" FontSize="9" Margin="-1,0,1,0" Width="30" Height="40" Foreground="Transparent" 
                                                               RelativePanel.AlignRightWithPanel="True" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Background="Transparent"
                                                               Click="ListItemDeleteButton_Click"
                                                                IsEnabled="{x:Bind IsInEditMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                                        </RelativePanel>

                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout>
                                                <StackPanel Orientation="Vertical">
                                                    <Button Click="CopyToThisMonth_Click" Content="Duplicate" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch">
                                                    </Button>
                                                    <Button Click="CopyToNextMonth_Click" Content="Copy to Next Month" Foreground="White"
                                                        FontFamily="Assets/Roboto-Thin.ttf#Roboto" HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch" Margin="0,10,0,0">
                                                    </Button>
                                                </StackPanel>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </StackPanel>
                </ScrollViewer>

                <!-- SUMMARY/RECEIPT TABS SECTION -->

                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" IsHorizontalRailEnabled="False" HorizontalScrollMode="Auto">
                    <Pivot x:Name="InformationView" Margin="10,20"  HorizontalAlignment="Left" MaxWidth="800">
                        <Pivot.HeaderTemplate>
                            <DataTemplate>
                                <toolkit:DropShadowPanel x:Name="SummaryHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="3" OffsetY="3"
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding}"  Margin="0" FontSize="23" TextAlignment="Left" VerticalAlignment="Bottom"
                                                   FontFamily="Assets/Roboto-Bold.ttf#Roboto"/>
                                </toolkit:DropShadowPanel>
                            </DataTemplate>
                        </Pivot.HeaderTemplate>

                        <!-- SUMMARY TAB PAGE -->

                        <PivotItem x:Name="SummaryTab"  Header="Summary">

                            <Border BorderBrush="White" BorderThickness="2" CornerRadius="4">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="DarkBlue" Offset=".0"/>
                                        <GradientStop Color="#2b2be2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <StackPanel Orientation="Vertical">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <toolkit:DropShadowPanel Grid.Row="0" x:Name="ThisMonthHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="3" OffsetY="3"
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,30,0,0">
                                                <TextBlock Text="This Month:"  Margin="0" FontSize="23" TextAlignment="Left" VerticalAlignment="Bottom"
                                                                    FontFamily="Assets/Roboto-Bold.ttf#Roboto" Foreground="White"/>
                                            </toolkit:DropShadowPanel>

                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- TOTAL AMOUNTS CALCULATION -->
                                                
                                                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="40,20,20,20"
                                                            MinWidth="250">
                                                    <RelativePanel>
                                                        <TextBlock x:Name="SummaryIncomeLabel" FontSize="16" Foreground="White" 
                                                                   Text="Incomes" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                                                   HorizontalAlignment="Right" Margin="0,3,104,3"
                                                                   RelativePanel.AlignLeftWithPanel="True"/>
                                                        <TextBlock  FontSize="16" Foreground="White" Margin="4,0,0,0"
                                                                   Text="{x:Bind CurrentMonth.IncomeTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}"  
                                                                    FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                    HorizontalAlignment="Right"
                                                                    RelativePanel.AlignRightWithPanel="True"/>
                                                    </RelativePanel>
                                                    <RelativePanel>
                                                        <TextBlock x:Name="SummaryExpensesLabel" FontSize="16" Foreground="White" 
                                                                   Text="Expenses" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                                                   HorizontalAlignment="Right" Margin="0,3,94,3"
                                                                   RelativePanel.AlignLeftWithPanel="True"/>
                                                        <TextBlock FontSize="16" Foreground="White" 
                                                                   Text="-" FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                   HorizontalAlignment="Right"
                                                                   RelativePanel.LeftOf="SummaryExpenseTotal"/>
                                                        <TextBlock  x:Name="SummaryExpenseTotal" FontSize="16" Foreground="White" Margin="4,0,0,0"
                                                                   Text="{x:Bind CurrentMonth.ExpenseTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}"  
                                                                    FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                    HorizontalAlignment="Right"
                                                                    RelativePanel.AlignRightWithPanel="True"/>
                                                    </RelativePanel>
                                                    <RelativePanel BorderBrush="White" BorderThickness="0,0,0,1">
                                                        <TextBlock x:Name="SummaryReceiptsLabel" FontSize="16" Foreground="White" 
                                                                   Text="Amount Spent" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                                                   HorizontalAlignment="Right" Margin="0,3,61,8"
                                                                   RelativePanel.AlignLeftWithPanel="True"/>
                                                        <TextBlock FontSize="16" Foreground="White" 
                                                                   Text="-" FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                   HorizontalAlignment="Right"
                                                                   RelativePanel.LeftOf="SummaryReceiptTotal"/>
                                                        <TextBlock  x:Name="SummaryReceiptTotal" FontSize="16" Foreground="White" Margin="4,0,0,5"
                                                                   Text="{x:Bind CurrentMonth.AmountSpent, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}"  
                                                                    FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                    HorizontalAlignment="Right"
                                                                    RelativePanel.AlignRightWithPanel="True"/>
                                                    </RelativePanel>
                                                    <RelativePanel Margin="0,10,0,0">
                                                        <TextBlock x:Name="SummaryTotalLabel" FontSize="16" Foreground="White" 
                                                                   Text="Total" FontFamily="Assets/Roboto-Thin.ttf#Roboto"
                                                                   HorizontalAlignment="Right" Margin="0,3,122,3"/>
                                                        <TextBlock FontSize="16" Foreground="White" 
                                                                   Text="=" FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                   HorizontalAlignment="Right" Margin="0,3,0,0"
                                                                   RelativePanel.LeftOf="SummaryTotalAmount"/>
                                                        <TextBlock x:Name="SummaryTotalAmount" FontSize="16" Foreground="White" Margin="4,3,0,0"
                                                                   Text="{x:Bind CurrentMonth.GrandTotal, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}"  
                                                                    FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                    HorizontalAlignment="Right"
                                                                   RelativePanel.AlignRightWithPanel="True"/>
                                                    </RelativePanel>
                                                </StackPanel>

                                                <!-- MESSAGES SECTION -->
                                                
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    
                                                    <!-- BUDGET OVERFLOW WARNING -->
                                                    
                                                    <Border BorderBrush="Orange" BorderThickness="1" Margin="0,20,0,10" MaxWidth="321" MinHeight="52"
                                                            Visibility="{x:Bind CurrentMonth.SpentBudgetGrandTotal, Mode=OneWay, Converter={StaticResource InverseIntBoolToVisibilityConverter}}">
                                                        <RelativePanel>
                                                            <TextBlock x:Name="BudgetOverflowWarning" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                                                       Foreground="Yellow" Opacity="1.0" Padding="0" Margin="4,3,10,0"
                                                                       Text="&#xE814;" TextAlignment="Left" VerticalAlignment="Top"
                                                                       RelativePanel.AlignLeftWithPanel="True">        
                                                                <TextBlock.Triggers>
                                                                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="BudgetOverflowWarning"
                                                                             Storyboard.TargetProperty="(TextBlock.Opacity)"
                                                                             From="1.0" To="0.0" Duration="0:0:01"
                                                                             AutoReverse="True" RepeatBehavior="Forever"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </EventTrigger>
                                                                </TextBlock.Triggers>
                                                            </TextBlock>
                                                            <TextBlock Foreground="White" FontFamily="Assets/Roboto-Normal.ttf#Roboto" 
                                                                       RelativePanel.AlignRightWithPanel="True" Margin="10,0,1,0"
                                                               VerticalAlignment="Center" FontSize="13" TextWrapping="Wrap" Text="If you spend your current budget allotment you will have a negative balance at the end of the month. Consider lowering your budget totals."/>
                                                        </RelativePanel>
                                                        
                                                    </Border>

                                                    <!-- EXPENSES DUE TODAY LIST -->
                                                    
                                                    <ListView ItemsSource="{x:Bind CurrentMonth.TodaysExpenses, Mode=OneWay}"
                                                              HorizontalAlignment="Left" Margin="74,0,0,0">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate x:DataType="local:Expense">
                                                                <StackPanel Orientation="Horizontal"
                                                                            Visibility="{x:Bind IsPaid, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                                    <Border BorderBrush="Red" BorderThickness="1" Margin="-10,0,-10,0">
                                                                        <TextBlock Foreground="White" FontFamily="Assets/Roboto-Normal.ttf#Roboto" 
                                                                                 VerticalAlignment="Center" FontSize="12">
                                                                            <Run Text="{x:Bind Amount, Mode=OneWay, Converter={StaticResource CurrencyFormatConverter}}"
                                                                                 FontFamily="Assets/Roboto-Bold.ttf#Roboto"/>
                                                                            <Run Text=" is due to "/>
                                                                            <Run Text="{x:Bind Payee.Label, Mode=OneWay}"
                                                                                 Foreground="Yellow"/>
                                                                            <Run Text=" for "/>
                                                                            <Run Text="{x:Bind Label, Mode=OneWay}"
                                                                                 FontFamily="Assets/Roboto-Bold.ttf#Roboto"/>
                                                                            <Run Text=" today."/>
                                                                        </TextBlock>
                                                                    </Border>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                    
                                                </StackPanel>
                                                
                                            </Grid>

                                        </Grid>
                                        
                                        <RelativePanel>

                                            <!-- INCOME BY CATEGORY CHART -->

                                            <chart:SfChart HorizontalHeaderAlignment="Left" HorizontalAlignment="Left"
                                                           Height="300" Width="390" Margin="0,10,0,0"
                                                           Foreground="White" AreaBorderBrush="Transparent">
                                                <chart:SfChart.Header>
                                                    <toolkit:DropShadowPanel x:Name="IncomeByCategoryHeaderText" BlurRadius="2" ShadowOpacity="0.7" OffsetX="3" OffsetY="3"
                                                         Color="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                                                        <TextBlock Text="Income By Category:"  Margin="0" FontSize="23" TextAlignment="Left" VerticalAlignment="Bottom"
                                                                    FontFamily="Assets/Roboto-Bold.ttf#Roboto"/>
                                                    </toolkit:DropShadowPanel>
                                                </chart:SfChart.Header>

                                                <chart:SfChart.Legend>
                                                    <chart:ChartLegend FontFamily="Assets/Roboto-Normal.ttf#Roboto"
                                                                       HorizontalAlignment="Left"
                                                                       DockPosition="Right"
                                                                       Margin="0,0,40,0"
                                                                       />
                                                </chart:SfChart.Legend>

                                                <chart:PieSeries 
                                                                 ListenPropertyChange="True" Margin="0"
                                                                 ItemsSource="{x:Bind CurrentMonth.IncomeTypeDataPoints, Mode=OneWay}"
                                                                 XBindingPath="Label"
                                                                 YBindingPath="Amount"
                                                                 ShowTooltip="True" 
                                                                 chart:ChartTooltip.ShowDuration="5000"
                                                                 Palette="PurpleChrome">

                                                    <chart:PieSeries.TooltipTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="{Binding Interior}" BorderThickness="1"
                                                                    Background="Transparent">
                                                                <Grid Height="40" Background="DarkBlue">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height=".5*"/>
                                                                        <RowDefinition Height=".5*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                                                                        <Border Height="10" Width="10" BorderBrush="Transparent"
                                                                                Margin="5,1,5,0"
                                                                                Background="{Binding Interior}"/>
                                                                        <TextBlock Text="{Binding Item.Label}" FontSize="12" Margin="2,0,0,0"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
